<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrderingSystem</title>
    <link rel="stylesheet" href="~/css/AdminSidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/OrderingSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>
<body>
    <aside class="sidebar">
        <nav class="sidebar-nav ">
            <h4 class="text-center mb-4">Admin Panel</h4>

            <ul class="nav-list primary-nav">

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                        <span class="material-symbols-outlined">Dashboard</span>
                        <span class="nav-label">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Product" asp-action="Index">
                        <span class="material-symbols-outlined">package_2</span>
                        <span class="nav-label">Product</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Category" asp-action="Index">
                        <span class="material-symbols-outlined">category</span>
                        <span class="nav-label">Category</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Order" asp-action="Index">
                        <span class="material-symbols-outlined">list_alt</span>
                        <span class="nav-label">Order List</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Account" asp-action="Index" class="nav-link">
                        <span class="material-symbols-outlined"> manage_accounts</span>
                        <span class="nav-label">Account</span>
                    </a>

                </li>

                <li class="nav-item dropdown-container">
                    <a href="#" class="nav-link" data-bs-toggle="collapse" data-bs-target="#officialMenu">
                        <span class="material-symbols-outlined"> Settings</span>
                        <span class="nav-label">Settings</span>
                        <span class="dropdown-icon material-symbols-outlined">
                            keyboard_arrow_down
                        </span>
                    </a>
                    <ul class="dropdown_menu collapse" id="officialMenu">
                        <li class="nav-item">
                            <a class="nav-link dropdown-link" asp-controller="Official" asp-action="Index">
                                Officials
                            </a>
                        </li>
                        @* <li class="nav-item">
                        <a class="nav-link dropdown-link" asp-controller="Settings" asp-action="Register">
                        Change Password
                        </a>
                        </li> *@
                    </ul>
                </li>

            </ul>
            <ul class="nav-list secondary-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Logout">
                        <span class="material-symbols-outlined">logout</span>
                        <span class="nav-label">Logout</span>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>
    <header>
        <nav>
            <p>NIKKO VILLANUEVA</p>
        </nav>
    </header>
    <div>
        <main>
            @RenderBody()
        </main>
    </div>

    @*  <footer class="bg-dark text-white py-4 mt-5">
    <div class="container">
    &copy; 2025 - OrderingSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/autonumeric@4.6.0/dist/autoNumeric.min.js"></script>
    <script src="~/js/category.js" asp-append-version="true"></script>
    <script src="~/js/product.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
