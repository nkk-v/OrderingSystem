@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />

<div class="hero-image mb-4">
    <div class="hero-text">
        <h1 class="hero-title">SAVOR THE FLAVOR</h1>
        <p class="hero-subtitle">Craving for the perfect tiramisu? Look no further! We offer premium, handcrafted tiramisu that will delight your taste buds.</p>
        <a asp-controller="Menu" asp-action="Index" class="btn order-btn mt-3 px-5 py-2">Order now</a>
    </div>
</div>
