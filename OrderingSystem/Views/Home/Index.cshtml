    <section>
        <h2 class="text-white">Featured Products</h2><br />

        <div class="border-bottom"></div><br />

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var product in Model.products)
            {
                <div class="col">
                    <div class="card h-100 bg-transparent border-0">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="width: 100%; object-fit: cover;">
                        <div class="card-body">
                            <h6 class="card-title text-white">@product.Name</h6>
                            <p class="card-text small text-white">@product.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
    
</div>

