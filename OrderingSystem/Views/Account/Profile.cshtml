@model OrderingSystem.ViewModels.UserAccountViewModel

<link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />

@{
    ViewData["Title"] = "My Account";
}

<h2>My Account</h2>
<p>Hello @Model.Fullname</p>

<ul class="nav nav-tabs" id="accountTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="details-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab">Your Details</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="orders-tab" data-bs-toggle="tab" data-bs-target="#orders" type="button" role="tab">My Orders</button>
    </li>
</ul>

<div class="tab-content mt-3" id="accountTabContent">

    <div class="card p-4 tab-pane fade show active" id="details" role="tabpanel">
        <table class="table table-borderless">
            <tr>
                <td><strong>Name</strong></td>
                <td>@Model.Fullname</td>
            </tr>
            <tr>
                <td><strong>Username</strong></td>
                <td>@Model.Username</td>
            </tr>
            <tr>
                <td><strong>Password</strong></td>
                <td><a href="#" data-bs-toggle="modal" data-bs-target="#changePasswordModal">Change Password</a></td>
            </tr>
        </table>
    </div>

    <div class="card p-4 tab-pane fade" id="orders" role="tabpanel">
        <h4 class="mt-3">Recent Orders</h4>
        @if (!Model.HasItems)
        {
            <div class="alert alert-warning mt-3 text-center">
                No orders yet.
            </div>
        }
        else
        {
            <table class="table table-borderless">
                <thead class="table-dark">
                    <tr>
                        <th>Order number</th>
                        <th>Order Date</th>
                        <th>Customer</th>
                        <th>Total Amount</th>
                        <th>Order Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>

                            <td>@order.OrderNum</td>
                            <td>@order.DeliveryDate?.ToString("MM-dd-yyyy hh-mm tt")</td>
                            <td>@order.Fullname</td>
                            <td>₱ @order.TotalAmount.ToString("N2")</td>
                            <td>@order.Status</td>
                            <td>
                                <button class="link-primary" popovertarget="ViewDetails">
                                    View Details
                                </button>
                            </td>
                        </tr>

                        <!-- Popover -->
                        <div popover id="ViewDetails">
                            <h5>Order Details</h5>

                            <div class="OrderDetails-container">

                                @foreach (var item in order.OrderItems)
                                {
                                    <div class="row-container">
                                        <div class="row-item">
                                            <p>@item.Quantity</p>
                                        </div>
                                        <div class="row-item">
                                            <p>@item.ProductName</p>
                                        </div>   
                                    </div>
                                }
                            </div>

                        </div>
                    }
                </tbody>
            </table>
        }

    </div>

</div>



<!-- Change Password Modal -->
<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Change Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="changePasswordModalBody">
                <!-- Form content will be loaded here -->
            </div>
        </div>
    </div>
</div>