@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


@model OrderingSystem.ViewModels.LoginViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm p-4">
                <div class="row g-0 d-flex align-items-stretch">

                    <!-- Logo (left side) -->
                    <div class="col-md-5 d-flex justify-content-center align-items-center bg-light">
                        <img src="~/uploads/images/dc-logo.jpg"
                             alt="Dolce Misu Logo"
                             style="width: 100%; height: 100%; border-radius: 4px;" />
                    </div>
                    <!-- Login Form (right side) -->
                    <div class="col-md-7 p-4 d-flex flex-column justify-content-center">
                        <form asp-action="login" method="post">
                            @if (ViewData["error"] != null)
                            {
                                <div class="alert alert-danger">@ViewData["error"]</div>
                            }

                            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Username" class="form-control" id="username" placeholder="Username" />
                                <label asp-for="Username">Username</label>
                                <span asp-validation-for="Username" class="text-danger small"></span>
                            </div>

                            <div class="form-floating position-relative mb-3">
                                <input asp-for="Password" class="form-control pe-5" type="password" placeholder="Password" id="Password" />
                                <label asp-for="Password">Password</label>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                                <span class="position-absolute top-50 end-0 translate-middle-y me-3" style="cursor:pointer;" onclick="togglePassword('Password', 'toggleIcon1')">
                                    <i class="bi bi-eye-slash-fill" id="toggleIcon1"></i>
                                </span>
                            </div>

                            <div class="mb-3 small">
                                <p>Don't have an account? <a asp-action="Register">Sign up</a></p>
                            </div>

                            <div>
                                <input type="submit" class="btn btn-primary w-100 fw-bold" value="Login" />
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>






@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="~/js/login.js" asp-append-version="true"></script>