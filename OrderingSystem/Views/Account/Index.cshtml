@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage User Roles";
}

@model List<OrderingSystem.ViewModels.UserRoleViewModel>

<h2 class="mb-4">Manage User Roles</h2>

<input type="text" id="searchBox" class="form-control mb-3" placeholder="Search by username" />

<table class="table table-bordered table-hover" id="userTable">
    <thead class="table-light">
        <tr>
            <th>Username</th>
            <th>Current Role</th>
            <th>Change Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <form asp-action="ChangeUserRoles" method="post" class="d-flex gap-2">
                        <input type="hidden" name="userId" value="@user.UserId" />
                        <select name="newRole" class="form-select form-select-sm w-auto">
                            <option value="Admin">Admin</option>
                            <option value="Customer">Customer</option>
                        </select>
                        <input type="submit" class="btn btn-sm btn-primary" value="Update" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

