@model OrderingSystem.ViewModels.OrderViewModel
@{
}

<div class="container text-center mt-5">
    <div class="card shadow p-5">
        <div class="d-flex justify-content-center">
            <img src="~/uploads/images/payment-success.png" alt="Success" style="width: 100px;" class="mb-4 " />
        </div>

        <h2 class="text-success">Thank You, @ViewBag.CustomerName</h2>
        <p class="lead">Your payment has been successfully processed.</p>
        <p class="mt-3">Order Number: <strong>@ViewBag.OrderNum</strong></p>


        <div class="card shadow rounded-4 p-3 mb-4">
            @foreach (var item in Model.OrderItems)
            {
                <div class="d-flex justify-content-center align-content-center gap-4">
                    <div>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" width="150" height="150" class="img-thumbnail" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </div>
                    <div class="flex-grow-1 d-flex justify-content-between">
                        <div>
                            <strong class="mb-3">@item.ProductName</strong>
                            <p>₱ @item.Price.ToString("N2")</p>
                        </div>

                        <div>
                            <strong>Qty: @item.Quantity</strong>
                        </div>
                    </div>
                </div>
            }

            <hr />

            <div class="d-flex">
                <div class="flex-grow-1">
                    <strong>Note</strong>
                    @Model.DeliveryNote
                </div>
                <div class="flex-grow-1">
                    <div class="d-flex justify-content-between">
                        <p>Subtotal</p>
                        <span><strong>₱ @Model.SubTotal.ToString("N2")</strong></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p>Delivery Fee</p>
                        <span><strong>₱ @Model.DeliveryFee.ToString("N2")</strong></span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <p>Total</p>
                        <span><strong>₱ @Model.TotalAmount.ToString("N2")</strong></span>
                    </div>
                </div>
                
            </div>
        </div>

        <div class="card shadow rounded-4 p-3 mb-4">
            <div class="d-flex justify-content-center align-content-center gap-4 mb-4">
                <div>
                    <p>Delivery Address</p>
                </div>
                <div>
                    <p>@Model.Address</p>
                </div>
            </div>
            <div class="d-flex justify-content-center align-content-center gap-4 mb-4">
                <div>
                    <p>Customer Name</p>
                </div>
                <div>
                    <p>@Model.Fullname</p>
                </div>
            </div>

            <div class="d-flex justify-content-center align-content-center gap-4 mb-4">
                <div>
                    <p>Contact Number</p>
                </div>
                <div>
                    <p>@Model.ContactNumber</p>
                </div>
            </div>


           
           
         
        </div>


        <p class="mb-1">Your order is being prepared.</p>
        <small>
            View your pending orders
            <a asp-controller="Account" asp-action="Profile">here</a>
        </small>

    </div>

   
</div>
